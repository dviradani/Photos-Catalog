<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/bootstrap-5.3.0-alpha1-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Styles/MyCss.css" rel="stylesheet" />
    <style>
        #logo {
            opacity: 1;
        }

            #logo:hover {
                opacity: 0.5;
            }
    </style>
</head>
<body>
    <div>
        <!-- Grey with black text -->
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="HomePage" asp-controller="User"><img src="~/Assets/ig-instagram-icon.png" id="logo" alt="logo" height="35" width="35" /></a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="HomePage" asp-controller="User" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Catalog" asp-controller="User" class="nav-link">Catalog</a>
                    </li>
                </ul>
                <ul class="navbar-nav d-flex">

                    <li class="nav-item">
                        <a asp-action="Catalog" asp-controller="Admin" class="nav-link d-flex">Admin</a>
                    </li>
                    @{
                        if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a asp-action="Logout" asp-controller="Account" class="nav-link d-flex">Logout</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    <script src="~/scripts/jquery-3.3.1.js"></script>
    <script src="~/scripts/jquery.validate.min-1.17.0.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min-3.2.10.js"></script>
    <script src="~/bootstrap-5.3.0-alpha1-dist/js/bootstrap.js"></script>
    <script src="~/scripts/photoPreview.js"></script>
    @RenderSection("section1" , false)
</body>
</html>
