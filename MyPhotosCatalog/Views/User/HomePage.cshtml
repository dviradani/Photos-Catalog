@using MyPhotosCatalog.Models;
@model List<Photo>
@{
    ViewData["Title"] = "Welcome To My Catalog :)";
}


<link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/album/">





<link href="/docs/5.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<!-- Favicons -->
<link rel="apple-touch-icon" href="/docs/5.3/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
<link rel="icon" href="/docs/5.3/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
<link rel="icon" href="/docs/5.3/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
<link rel="manifest" href="/docs/5.3/assets/img/favicons/manifest.json">
<link rel="mask-icon" href="/docs/5.3/assets/img/favicons/safari-pinned-tab.svg" color="#712cf9">
<link rel="icon" href="/docs/5.3/assets/img/favicons/favicon.ico">
<meta name="theme-color" content="#712cf9">




<main>

    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Welcome To My Catalog :)</h1>
                <p class="lead text-muted">
                    <mark>My name is Dvir Adani , and this is the first version of my first website.</mark>

                </p>
                <p>
                    <a asp-action="Catalog" class="btn btn-primary my-2">To catalog</a>
                    <a asp-action="Catalog" asp-controller="Admin" class="btn btn-secondary my-2">Admin`s zone</a>
                </p>
            </div>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row text-center"><h3>Most Popular Photos:</h3><h4>(sorted by the number of comments)</h4></div>
            <br />
            @{
                int counter = 0;
                @for (int i = 0; i < 3; i++)
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    @for (int j = 0; j < 3; j++)
                    {
                            while (Model.Count > counter)
                            {
                                <div class="col">
                                    <div class="card shadow-sm">
                                        <img class="bd-placeholder-img card-img-top" width="100%" height="300" src="~/Pics/@Model[counter].PictureName">
                                        <div class="card-body">
                                            <p class="card-text">@Model[counter].Name</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a type="button" asp-action="Details" asp-route-id1="@Model[counter].Id" class="btn btn-sm btn-outline-secondary">View</a>
                                                    @*                                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
*@                                        </div>
                                                <small class="text-muted"><b>@Model[counter].Owner</b></small>
                                                <small class="text-muted">@Model[counter].Comments!.Count comments</small>
                                            </div>
                                            <input type="hidden" value="@(counter++)">
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                </div>
                <br />
            }
            }
        </div>
    </div>
</main>
<script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

